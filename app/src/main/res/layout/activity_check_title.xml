<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:text="게시물 확인"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제를 원하는 게시글 제목을 선택하세요"
        android:textColor="#000000"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/selected_sname"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="#00ff0000" />

    <TextView
        android:id="@+id/selected_sname2"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="#00ff0000" />

    <TextView
        android:id="@+id/selected_sname3"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="#00ff0000" />

    <TextView
        android:id="@+id/selected_sname4"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="#00ff0000" />

    <TextView
        android:id="@+id/selected_sname5"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="#00ff0000" />
    </LinearLayout>

    <ListView
        android:id="@+id/sname_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textFilterEnabled="true" />

</LinearLayout>