<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Crop2">

    <TextView
        android:id="@+id/textView_main_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="작물을 선택해주세요 . " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selected_crop3"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button_main_search"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="search" />

        <Button
            android:id="@+id/nextgo"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:onClick="nextgo"
            android:text="next"
            tools:ignore="OnClick" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/listView_main_list"/>

    <TextView
        android:id="@+id/textvieww"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="농작물 종류" />

    <ListView
        android:id="@+id/crop_list"
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:cacheColorHint="#FFF9F7E8"></ListView>

</LinearLayout>