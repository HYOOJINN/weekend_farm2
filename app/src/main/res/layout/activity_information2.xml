<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Information2"
    >

    <TextView
        android:id="@+id/toptextView"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="판매 정보"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        tools:context=".Information2">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="제목: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textinfo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFAE7"
            android:inputType="text"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        tools:context=".Information">

        <TextView
            android:id="@+id/crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="작물: "
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/textinfo2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFAE7"
            android:inputType="text"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        tools:context=".Information">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주소: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textinfo3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFAE7"
            android:inputType="text"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 상세 내용 "
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textinfo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:singleLine="false"
        android:background="#FFFAE7"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        android:layout_margin="20dp"/>

<!--비밀번호 입력확인하기 위한것-->
    <TextView
        android:id="@+id/textinfo5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFAE7"
        android:inputType="text"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="#00ff0000"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="비밀번호  "
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/inputpw"
            android:hint="비밀번호를 입력하세요"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFAE7"
            android:inputType="text"
            android:textSize="18sp"/>

    </LinearLayout>



    <Button
        android:id="@+id/btndelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#189BA3"
        android:onClick="btnOkay"
        android:text="판매 정보 삭제" ></Button>



</LinearLayout>